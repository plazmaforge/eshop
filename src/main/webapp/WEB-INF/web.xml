<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         metadata-complete="false"
         version="3.1">

    <servlet>
        <servlet-name>productsServlet</servlet-name>
        <servlet-class>com.ohapon.eshop.web.servlet.ProductsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productsServlet</servlet-name>
        <url-pattern>/products</url-pattern>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productAddServlet</servlet-name>
        <servlet-class>com.ohapon.eshop.web.servlet.ProductAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productAddServlet</servlet-name>
        <url-pattern>/product/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productEditServlet</servlet-name>
        <servlet-class>com.ohapon.eshop.web.servlet.ProductEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productEditServlet</servlet-name>
        <url-pattern>/product/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productRemoveServlet</servlet-name>
        <servlet-class>com.ohapon.eshop.web.servlet.ProductRemoveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productRemoveServlet</servlet-name>
        <url-pattern>/product/remove</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productSearchServlet</servlet-name>
        <servlet-class>com.ohapon.eshop.web.servlet.ProductSearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productSearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cartAddServlet</servlet-name>
        <servlet-class>com.ohapon.eshop.web.servlet.CartAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cartAddServlet</servlet-name>
        <url-pattern>/cart/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cartRemoveServlet</servlet-name>
        <servlet-class>com.ohapon.eshop.web.servlet.CartRemoveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cartRemoveServlet</servlet-name>
        <url-pattern>/cart/remove</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cartServlet</servlet-name>
        <servlet-class>com.ohapon.eshop.web.servlet.CartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cartServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.ohapon.eshop.web.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>com.ohapon.eshop.web.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>securityFilter</filter-name>
        <filter-class>com.ohapon.eshop.web.filter.SecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>securityFilter</filter-name>
        <url-pattern>/product/*</url-pattern>
        <url-pattern>/cart/*</url-pattern>
    </filter-mapping>

</web-app>